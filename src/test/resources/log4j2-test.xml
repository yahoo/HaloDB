<Configuration>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p  [%c{1}] %m %n"/>
        </Console>
        <Async name="async">
            <AppenderRef ref="console"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="com.oath.halodb.CompactionManager" level="info" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>